<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49ca9c">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativ1">
        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/image"
            android:layout_width="127dp"
            android:layout_height="104dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:src="@drawable/gh" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Mia Aisyah F"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:textAlignment="center"
            android:text="Diam atau bicara baik"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativ1"
        android:layout_marginTop="70dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/interest"
            android:text="Interest"
            android:textSize="20dp"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hobby"
            android:layout_below="@+id/interest"
            android:layout_marginTop="20dp"
            android:text="Hobby : menulis dan membaca"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/makes"
            android:layout_below="@+id/hobby"
            android:layout_marginLeft="20dp"
            android:text="Makes : ayam goreng"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mikes"
            android:layout_below="@+id/makes"
            android:layout_marginLeft="20dp"
            android:text="Mikes : air putih"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/interest2"
            android:layout_below="@+id/mikes"
            android:layout_marginLeft="20dp"
            android:text="Interest : mempelajari culture dan bahasa korean"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cita"
            android:layout_below="@+id/interest2"
            android:layout_marginLeft="20dp"
            android:text="Cita Cita : nikah sama oppa"
            />

    </RelativeLayout>

</RelativeLayout>